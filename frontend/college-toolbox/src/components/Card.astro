---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="card">
	<a target="_blank" href={href}>
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
		<img src="./toolboxImg.svg" style = "width:20em; height:20em;">
	</a>
</li>
<style>
	.card {

		list-style: none;
		display: flex;	
		border-radius: 4px;
		margin: 1em;
		box-shadow: inset 0px 0px 0px 10px rgb(var(--accent1));
		
	}
	.card > a {
		width: 100%;
		text-decoration: none;
		text-align: center;

		padding: 1.5rem;
		border-radius: 8px;

		color: rgb(var(--neutralDark));
		background-color: rgb(var(--neutralLight));
		opacity:0.9;

	}
	h2 {
		font-size: 2rem;
		transition: color 1 cubic-bezier(1, 1, 1, 1);
	}

	.card:is(:hover, :focus-within) {
		background-image: var(--accentgradient);
	}
	.card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent1));
	}
	.card:is(:hover, :focus-within) img {
		opacity: 0.7;
	}
</style>
