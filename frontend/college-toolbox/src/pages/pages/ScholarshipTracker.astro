---
import LayoutSidebar from '../../app/LayoutSidebar.astro';
import ScholarshipCard from '../../components/ScholarshipCard.jsx';
import ScholarshipList from '../../components/ScholarshipList.jsx';

---

<LayoutSidebar>
    <div class="format dark:format-invert lg:format-lg mt-32">
        <p
            class="text-4xl lg:text-8xl dark:text-slate-200 text-slate-600 leading-tight text-center"
        >
           <br>
            <a
                rel="noopener nofollow"
                href="https://github.com/uprm-inso4116-2023-2024-S1/semester-project-college-toolbox"
                class="font-bold text-transparent bg-clip-text bg-gradient-to-br from-pink-400 to-violet-800 dark:from-pink-300 dark:to-violet-700 no-underline"
                >Scholarship Tracker</a
            >
            
        </p>
         
        <ScholarshipList client:load/>
</LayoutSidebar>

<script>
	import { url, asset } from "../../lib/data";

	const cookies = document.cookie;
	// Check if the "auth_token" cookie is present
	const authToken = cookies?.split('; ').find(row => row.startsWith('auth_token='));

	// If the "auth_token" cookie is not found, redirect to the sign-in page
	if (!authToken) {
		window.location.href = url('authentication/sign-in');
	}
</script>
