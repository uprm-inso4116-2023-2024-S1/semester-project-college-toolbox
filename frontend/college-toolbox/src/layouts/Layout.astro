--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />	
		
		<title>{title}</title>	

		<meta name="description" content="College Toolbox, A platform for enriching students career's">
		<link rel="icon" type="image/svg+xml" href="/toolboxImg.svg" />
		<!-- <meta name="generator" content={Astro.generator} /> -->
	</head>

	<body>
		<slot />
	</body>
</html>

